#subheader
  .current-plan
    = render partial: "layouts/application/current_subscription"

  div
    h1.greeting = "Hello, #{current_customer.email}!"
    nav
      li.billing
        - unless current_customer.subscribed?
          = link_to "Billing", [stripeon, :plans]
        - else
          = link_to "Billing", [stripeon, :billing_settings]
      li.payments = link_to "Payment history", [stripeon, :payments]
